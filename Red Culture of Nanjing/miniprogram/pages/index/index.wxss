.page-section {
  background-color: #fdf6f5; /* 柔和浅底色，更衬红色主题 */
  min-height: 100vh;
  padding: 30rpx 0rpx;
  box-sizing: border-box;
}

.header {
  font-size: 30rpx;
  color: #C92C2C;
  text-align: center;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.spot-list {
  background-color: #C92C2C;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.spot-card {
  width: 90%;
  margin-top: 40px;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.spot-card:hover {
  transform: translateY(-8rpx);
}

.my-box {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spot-img {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
}

.spot-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #C92C2C;
  text-align: center;
}
